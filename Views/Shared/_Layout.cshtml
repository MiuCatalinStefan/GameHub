<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/GameHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #4B3F72; border-bottom: none; box-shadow: none;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/GameHubLogo.png" alt="GameHub Logo" style="height: 60px;">
                   
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item ml-3">
                            <a class="navbar-brand" asp-controller="Product" asp-action="Index" style="color: #ffffff;">Games</a>
                        </li>
                    </ul>
                    <div class="nav-item">
                        <a class="navbar-brand" asp-controller="ShoppingCart" asp-action="Index" style="color: #ffffff;">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted" style="background-color: #32174d; color: white; padding: 40px 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>About GameHub</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" style="color: white;">About us</a></li>
                        <li><a href="#" style="color: white;">Contact us</a></li>
                        <li><a href="#" style="color: white;">Careers</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Buy</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" style="color: white;">How to buy</a></li>
                        <li><a href="#" style="color: white;">Games list</a></li>
                        <li><a href="#" style="color: white;">Collections</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Help</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" style="color: white;">FAQ</a></li>
                        <li><a href="#" style="color: white;">Create a ticket</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Community</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" style="color: white;">Blog</a></li>
                        <li><a href="#" style="color: white;">Giveaways</a></li>
                        <li><a href="#" style="color: white;">Become affiliate</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-4 d-flex justify-content-between">
                <div class="col-md-6">
                    <h5>Get personalized game deals</h5>
                    <form>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Enter your email" aria-label="Recipient's email">
                            <div class="input-group-append">
                                <button class="btn btn-secondary" type="submit">Subscribe</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-3">
                    <h5>Follow us</h5>
                    <a href="#" class="text-white mr-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white mr-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white mr-2"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white mr-2"><i class="fab fa-discord"></i></a>
                </div>
            </div>

            <!-- Legal and Copyright -->
            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    &copy; 2023 GameHub - <a href="#" style="color: white;">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
