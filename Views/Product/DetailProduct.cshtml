@model (int id, ProductDto product, List<ProductDto> relatedProdcuts)

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .bg-dark-purple {
        background-color: #2C2C34; /* Dark purple color */
    }

    .bg-light-purple {
        background-color: #3E3E50; /* Light purple color */
    }

    .text-yellow {
        color: #FFC107; /* Yellow text color */
    }
    .info-card{
        padding:50px;
        border-radius:10px;
    }
    .btn-yellow {
        background-color: #FFC107; /* Yellow button color */
        border-color: #FFC107;
        color: white;
        width: 100%;
        margin-top: 1rem;
    }

        .btn-yellow:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

    .badge-purple {
        background-color: #6C63FF; /* Purple badge color */
    }

    .product-image {
        width: 100%;
        object-fit: cover;
    }

    .container-lg {
        padding-top: 2rem;
    }

    .store-path {
        color: #FFFFFF;
    }

        .store-path a {
            color: #FFFFFF;
            text-decoration: none;
        }

            .store-path a:hover {
                text-decoration: underline;
            }

    .rating-stars {
        color: #FFD700;
    }



    .card-promotion {
        padding: 1rem;
        background-color: #6C63FF;
        color: #FFFFFF;
        border: none;
    }

    .product-info-row {
        color: white;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 8px; /* Rounded corners */
        margin-bottom: 10px; 
    }

    .product-info-icon {
        margin-right: 10px;
        /* Style or replace with actual icons */
    }

    .product-info-text {
        flex-grow: 1;
    }

    .product-detail-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
    }

        .product-detail-list li {
            margin-right: 10px; /* Spacing between items */
        }

    .card-promotion {
        background-color:blueviolet; /* Change this color as needed */
        color: #FFFFFF;
        border: none;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .card-header{
            background-color: #4b0082; 
            padding: 10px;
            text-align: center;
            font-size: 0.9rem;
            font-weight:700;
            color: #FFC107;
        }

        .card-promotion .store-info {
            text-align: left;
            margin-bottom: 10px;
        }

            .card-promotion .store-info span {
                display: block;
            }

        .price-tag {
            font-size: 1.8rem;
        }

        .card-promotion .btn-yellow {
            background-color: #FFC107;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .card-promotion .btn-yellow:hover {
                background-color: #e0a800;
            }

        .card-promotion .price-info {
            font-size: 0.7rem;
            margin-bottom: 3px;
        }

        .card-promotion .add-to-cart {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 3px;
        }
        .card-promotion i{
            font-size:1.5em;
            border:1px;
            padding:0.5em;
            margin-top:10px;
        }

    .similar-offers .card {
        background-color: #3E3E50; /* Light purple color */
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s;
    }

        .similar-offers .card:hover {
            transform: scale(1.05);
        }

        .similar-offers .card img {
            width: 100%;
            height: 200px; /* Increase height for a bigger picture */
            object-fit: cover;
        }

    .similar-offers .card img{
        min-height:320px;
    }

    .similar-offers .card  {
        min-width: 250px;
    }
    .similar-offers .card-body {
        padding: 20px;
        text-align: center;
    }

    .similar-offers .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .similar-offers .card-text {
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .similar-offers .badge-purple {
        color: #FFC107;
        font-size: 1.25rem;
        padding: 5px 10px;
    }

    .similar-offers .btn-yellow,
    .similar-offers .btn-view {
        background-color: #FFC107;
        color: white;
        font-weight: bold;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin: 5px;
    }

        .similar-offers .btn-yellow:hover,
        .similar-offers .btn-view:hover {
            background-color: #e0a800;
        }

    .similar-offers .btn-view {
        background-color: #6C63FF;
        color: white;
    }

        .similar-offers .btn-view:hover {
            background-color: #4b0082;
        }


</style>

<div class="container-fluid">
    <div class="row">
        <!-- Product Main Details -->
        <div class="col-md-8 p-3 bg-dark-purple text-white info-card">
            <div class="row">
                <!-- Product Image -->
                <div class="col-md-4 d-flex justify-content-center align-items-center">
                    <img class="product-image" src="@Model.product.Image?.ToString()" alt="@Model.product.Title">
                </div>
                <!-- Product Details -->
                <div class="col-md-8">
                    <h2>@Model.product.Title</h2>
                    <div class="rating-stars">
                        <span>★★★★☆</span> 4.18 / 5 from 11 ratings
                    </div>
                    <p class="mt-3">@Model.product.Description</p>
                    <!-- Additional details, e.g., region, platform, etc. -->
                    <div class="mt-4">
                        <span class="badge badge-success">@Model.product.Producer</span>
                        <span class="badge badge-info">@Model.product.Platform</span>
                        <span class="badge badge-warning">@Model.product.ReleaseDate</span>
                    </div>
                </div>
            </div>
            <!-- Product Info -->
            <div class="product-info mt-4 ml-4">
                <div class="row">
                    <div class="col-md-6 product-info-row">
                        <span class="product-info-text"><strong>Minimum age:</strong> +@Model.product.RecomandedAge</span>
                    </div>
                    <div class="col-md-6 product-info-row">
                        <span class="product-info-text"><strong>Multiplayer:</strong> @Model.product.MultiplayerInfo</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 product-info-row">
                        <div class="product-info-text">
                            <strong>Available languages:</strong>
                            @foreach (var lang in Model.product.AvailableLanguages)
                            {
                                <span class="badge bg-primary">@lang</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 product-info-row ">
                        <div class="product-info-text">
                            <strong>Categories:</strong>
                            @foreach (var category in Model.product.Categories)
                            {
                                <span class="badge bg-danger">@category</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Promotion Card -->
        <div class="col-md-4 p-3">
            <h6 class="card-header">PROMOTED OFFER</h6>
            <div class="card card-promotion">
                <div class="store-info">
                    <span>Verified seller <i class="bi bi-check-circle-fill text-success"></i></span>
                </div>
                <div class="price-tag">@Model.product.Price.ToString("c") <span class="price-info"> Price is not final </span></div>
                <div class="add-to-cart">
                    <a href="@Url.Action("AddProduct", "ShoppingCart", new { productId = Model.id})" class="btn btn-yellow">Buy now</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Similar Offers -->
    @if (Model.relatedProdcuts != null && Model.relatedProdcuts.Any())
    {
        <div class="row similar-offers mt-5">
            <h3 class="col-12">Similar Offers</h3>
            @foreach (var relatedProduct in Model.relatedProdcuts)
            {
                <div class="col-md-3 mt-3">
                    <div class="card">
                        <img src="@relatedProduct.Image?.ToString()" alt="@relatedProduct.Title" class="card-img-top img-fluid">
                        <div class="card-body">
                            <h5 class="card-title">@relatedProduct.Title</h5>
                            <p class="card-text">@relatedProduct.Description</p>
                            <div class="price-tag">@relatedProduct.Price.ToString("c")</div>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="@Url.Action("AddProduct", "ShoppingCart", new { productId = @relatedProduct.Id })" class="btn btn-yellow">Add to cart</a>
                                <a href="@Url.Action("DetailProduct", "Product", new { id = @relatedProduct.Id })" class="btn btn-view">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }


</div>
