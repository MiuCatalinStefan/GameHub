@page
@model LoginModel

@{
   ViewData["Title"] = "Log in";
}

<style>
    .newcontainer {
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }
    .welcome-message {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
    .login-form {
        flex: 1;
        max-width: 400px;
    }
    .login-section {
        padding: 30px;
        background: #32174d;
    }
    .login-section h2 {
        color: #fff;
    }
    .form-control {
        background-color: #2c2c34;
        color: white;
        border: 1px solid #5c2d91;
    }
    .form-control:focus {
        background-color: #2c2c34;
        color: white;
        border: 1px solid #fff;
    }
    .btn-primary {
        background-color: #8A2BE2;
        border-color: #7c1fa2;
        margin-top: 15px;
    }
    .btn-primary:hover {
        background-color: #9b4bd8;
    }
    .external-login {
        display: flex;
        justify-content: space-around;
        margin-top: 15px;
    }
    .btn-social {
        background-color: #2c2c34;
        color: white;
        border: 1px solid #5c2d91;
        flex-grow: 1;
        margin: 5px;
    }
    .btn-social:hover {
        border: 1px solid #fff;
    }
</style>

<div class="newcontainer">
    <div class="welcome-message">
        <div class="mr-5 pr-5">
            <h1>Hi! It's nice to see you!</h1>
            <h2>Welcome back! Please login to your account.</h2>
        </div>
    </div>
    <div class="login-form">
        <section class="login-section">
            <form id="account" method="post">
                <h2>Log in</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3 ml-4">
                    <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" class="form-check-input" /> Remember me
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary btn-block">Log in</button>
                <div class="external-login">
                @foreach (var provider in Model.ExternalLogins)
                {
                   <button type="submit" class="btn btn-social" name="provider" value="@provider.Name">@provider.DisplayName</button>
                }
                </div>
                <div class="mt-3 text-center">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a><br />
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </div>
            </form>
        </section>
    </div>

</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}